{
    "manifest_version": 3,
    "name": "Platzi Course Information",
    "version": "1.1",
    "description": "Get information from course profile",
    "content_scripts": [
        {
            "matches": ["https://platzi.com/clases/*"],
            "js": ["./app.js"]
        }
    ],
    "action": {
        "default_popup": "./App/index.html",
        "default_icon": {
            "32": "./App/Image/32.png",
            "48": "./App/Image/48.png"
        }
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
        "32": "./App/Image/32.png",
        "48": "./App/Image/48.png"
    }

}